#variables dynamic

age=27

money= 23.46

name="sahib"

print('my name is', name , 'and I am',age,'years old\n and I have', money, 'dollars')
print('my name is %s and I am %d years old\n and I have %.1f dollars' %(name,age,money))
print('my name is{} name , and I am {} years ols\n and I have {} Dollars'.format(name,age,money))

