#inputs in python
name = input('what is your name')
last_name = input('hello {} what is your last name?'.format(name))
print('your full name is', name , last_name )
num1 = int(input('give me a number and I double it fpr you!'))

#int() #float() # str()
print(num1*2)


#3 numbers:
number1=int(input('please enter the  first number:'))
number2=int(input('please enter the second number:'))
number3=int(input('please enter the  third number:'))
average = (number1+number2+number3)/3
print('the average of {} , {}, {} is {}'.format (number1,number2,number3,average))

#for 2 decimals
print('the average of {} , {}, {} is {:.2f}'.format (number1,number2,number3,average))

